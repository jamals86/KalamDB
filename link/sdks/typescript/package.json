{
  "name": "kalam-link",
  "type": "module",
  "version": "0.1.0",
  "description": "WebAssembly-compatible KalamDB client library with TypeScript support",
  "license": "Apache-2.0",
  "author": "KalamDB Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamals86/KalamDB"
  },
  "homepage": "https://github.com/jamals86/KalamDB#readme",
  "bugs": {
    "url": "https://github.com/jamals86/KalamDB/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./wasm": {
      "types": "./dist/wasm/kalam_link.d.ts",
      "import": "./dist/wasm/kalam_link.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "node -e \"const fs=require('fs');const rm=p=>{try{fs.rmSync(p,{recursive:true,force:true})}catch{}};rm('dist');rm('.wasm-out');rm('src/wasm')\"",
    "build:wasm": "node -e \"const {execSync}=require('child_process');process.chdir('../..');const env={...process.env,CARGO_ENCODED_RUSTFLAGS:'',RUSTFLAGS:''};execSync('wasm-pack build --target web --out-dir sdks/typescript/.wasm-out --features wasm --no-default-features',{stdio:'inherit',env})\"",
    "build:copy-wasm": "node -e \"const fs=require('fs');const p=require('path');['src/wasm','dist/wasm'].forEach(d=>fs.mkdirSync(d,{recursive:true}));fs.readdirSync('.wasm-out').filter(f=>!f.includes('package.json')&&!f.includes('.gitignore')).forEach(f=>{fs.copyFileSync(p.join('.wasm-out',f),p.join('src/wasm',f));fs.copyFileSync(p.join('.wasm-out',f),p.join('dist/wasm',f))})\"",
    "build:ts": "tsc",
    "build:cleanup": "node -e \"require('fs').rmSync('src/wasm',{recursive:true,force:true})\"",
    "build": "npm run clean && npm run build:wasm && npm run build:copy-wasm && npm run build:ts && npm run build:cleanup",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "kalamdb",
    "database",
    "client",
    "websocket",
    "wasm",
    "realtime",
    "live-queries"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}