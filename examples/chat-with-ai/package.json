{
  "name": "kalamdb-chat-with-ai",
  "version": "1.0.0",
  "private": true,
  "description": "Chat with AI example using KalamDB real-time subscriptions, topics, and kalam-link SDK",
  "scripts": {
    "ensure-sdk": "bash scripts/ensure-sdk.sh",
    "predev": "npm run ensure-sdk",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "preservice": "npm run ensure-sdk",
    "service": "npx tsx src/services/message-processor.ts",
    "setup": "bash setup.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:api": "npx tsx tests/api.test.ts",
    "test:wasm": "npx tsx tests/wasm-client.test.ts",
    "test:all": "npm run test:api && npm run test:wasm"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "emoji-picker-react": "^4.17.4",
    "kalam-link": "file:../../link/sdks/typescript",
    "lucide-react": "^0.400.0",
    "next": "^15.5.10",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.11.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18",
    "ws": "^8.19.0"
  }
}
