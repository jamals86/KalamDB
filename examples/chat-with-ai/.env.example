# KalamDB Chat App Configuration

# ── Authentication mode ──────────────────────────────────────────────
# "keycloak"  → Keycloak OIDC (default, opens Keycloak login window)
# "basic"     → Legacy username/password Basic Auth
NEXT_PUBLIC_AUTH_MODE=keycloak

# ── Keycloak settings (only used when AUTH_MODE=keycloak) ────────────
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8081
NEXT_PUBLIC_KEYCLOAK_REALM=kalamdb
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=kalamdb-chat

# ── KalamDB Server ──────────────────────────────────────────────────
NEXT_PUBLIC_KALAMDB_URL=http://localhost:8080

# Frontend credentials (only used when AUTH_MODE=basic)
NEXT_PUBLIC_KALAMDB_USERNAME=admin
NEXT_PUBLIC_KALAMDB_PASSWORD=kalamdb123

# Service credentials (server-only, used by message-processor.ts)
KALAMDB_URL=http://localhost:8080
KALAMDB_USERNAME=ai-service
KALAMDB_PASSWORD=service123

# Gemini API (required by src/services/message-processor.ts)
GEMINI_API_KEY=your-gemini-api-key
# Alternative variable supported by @ai-sdk/google:
# GOOGLE_GENERATIVE_AI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash
AI_MAX_OUTPUT_TOKENS=512
AI_TEMPERATURE=0.7
AI_CONTEXT_WINDOW_MESSAGES=20
