{
  "name": "kalam-link",
  "type": "module",
  "version": "0.1.0",
  "description": "WebAssembly-compatible KalamDB client library with TypeScript support",
  "license": "Apache-2.0",
  "author": "KalamDB Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamals86/KalamDB"
  },
  "homepage": "https://github.com/jamals86/KalamDB#readme",
  "bugs": {
    "url": "https://github.com/jamals86/KalamDB/issues"
  },
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./wasm": {
      "types": "./dist/wasm/kalam_link.d.ts",
      "import": "./dist/wasm/kalam_link.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "node -e \"const fs=require('fs');const p=require('path');const rm=d=>{try{fs.rmSync(d,{recursive:true,force:true})}catch{}};rm('dist');rm('.wasm-out')\"",
    "build:wasm": "node -e \"const {execSync}=require('child_process');process.chdir('../..');const env={...process.env,CARGO_ENCODED_RUSTFLAGS:'',RUSTFLAGS:'',CARGO_TARGET_DIR:'sdks/typescript/.wasm-target',CARGO_HOME:'sdks/typescript/.wasm-cargo-home'};execSync('wasm-pack build --target web --out-dir sdks/typescript/.wasm-out --features wasm --no-default-features',{stdio:'inherit',env})\"",
    "build:fix-types": "node -e \"const fs=require('fs');const p=require('path');const dts=p.join('.wasm-out','kalam_link.d.ts');let c=fs.readFileSync(dts,'utf8');if(!c.includes('type JsonValue')){c='type JsonValue=null|boolean|number|string|JsonValue[]|{[key:string]:JsonValue};\\n'+c;fs.writeFileSync(dts,c)}\"",
    "build:ts": "tsc",
    "build:copy-wasm": "node -e \"const fs=require('fs');const p=require('path');['dist/wasm','dist/.wasm-out'].forEach(d=>fs.mkdirSync(d,{recursive:true}));fs.readdirSync('.wasm-out').filter(f=>!f.includes('package.json')&&!f.includes('.gitignore')).forEach(f=>{fs.copyFileSync(p.join('.wasm-out',f),p.join('dist/wasm',f));fs.copyFileSync(p.join('.wasm-out',f),p.join('dist/.wasm-out',f))})\"",
    "build": "npm run clean && npm run build:wasm && npm run build:fix-types && npm run build:ts && npm run build:copy-wasm",
    "test:agent-runtime": "npm run build:ts && node --test tests/agent-runtime.test.mjs",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "kalamdb",
    "database",
    "client",
    "websocket",
    "wasm",
    "realtime",
    "live-queries"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
