# KalamDB Docker Environment Configuration
# Copy this file to .env and customize as needed
# Feature: 006-docker-wasm-examples

# ============================================================================
# Server Configuration
# ============================================================================

# Port to listen on (default: 8080)
KALAMDB_SERVER_PORT=8080

# Host address to bind to (default: 0.0.0.0 for all interfaces)
KALAMDB_SERVER_HOST=0.0.0.0

# ============================================================================
# Data Storage
# ============================================================================

# Data directory inside container (default: /data)
KALAMDB_DATA_DIR=/data

# ============================================================================
# Logging
# ============================================================================

# Log level: debug, info, warn, error (default: info)
KALAMDB_LOG_LEVEL=info

# Log file path (default: /data/logs/kalamdb.log)
KALAMDB_LOG_FILE=/data/logs/kalamdb.log

# Log to console: true or false (default: true)
KALAMDB_LOG_TO_CONSOLE=true

# ============================================================================
# Connection Limits
# ============================================================================

# Maximum concurrent connections (default: 100)
KALAMDB_MAX_CONNECTIONS=100

# ============================================================================
# Development/Production Toggle
# ============================================================================

# Uncomment for production settings
# KALAMDB_LOG_LEVEL=warn
# KALAMDB_MAX_CONNECTIONS=500

# Uncomment for development settings
# KALAMDB_LOG_LEVEL=debug
# KALAMDB_LOG_TO_CONSOLE=true
